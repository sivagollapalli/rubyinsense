%legend
  %h4 Please Enter Email
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-signin'}, defaults: {input_html: { class: "form-control"}, label_html: {class: "col-lg-2 control-label"}) do |f|
  = f.input :email
  = f.submit 'Continue' , class: 'btn btn-primary'
