%legend
  %h2 My Profile
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal"}, defaults: {input_html: { class: "form-control"}, label_html: {class: "col-lg-2 control-label"}}) do |f|
  .form-group
    = f.input :twitter_handle, disabled: true
  .form-group
    = f.input :email, disabled: true, required: false
  .form-group
    = f.input :fname, label: "First Name"
  .form-group
    = f.input :lname, label: "Last Name"
  .row
    .col-lg-2
    .col-lg-4
      = f.submit "Update", class: "btn btn-success"
      = link_to "Cancel", questions_path, class: "btn btn-default"


